{% extends 'base.html.twig' %}

{% block title %}Profil Administrateur
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Profil Administrateur - Modification mot de passe</h1>
		{% for message in app.flashes('danger') %}
			<div class="alert alert-danger mt-4" role="alert">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4" role="alert">
				{{ message }}
			</div>
		{% endfor %}
		<a href="{{ path('admin.edit',{'id': app.user.id}) }}" class="btn btn-secondary w-100 mt-4">Retour</a>
		{{ form(form) }}
	</div>
{% endblock %}
