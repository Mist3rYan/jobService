{% extends 'base.html.twig' %}

{% block title %}Profil Administrateur
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Profil Administrateur</h1>
		{% for message in app.flashes('danger') %}
			<div class="alert alert-danger mt-4" role="alert">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4" role="alert">
				{{ message }}
			</div>
		{% endfor %}
		<a href="{{ path('user.index') }}" class="btn btn-secondary w-100 mt-4">Retour</a>
		<a href="{{ path('admin.editPassword',{'id': user.id}) }}" class="btn btn-info w-100 mt-4">Changer mot de passe</a>
		{{ form_start(form) }}
		{{ form_errors(form) }}
		{{ form_row(form.email) }}
		{{ form_row(form.name) }}
		{{ form_widget(form.firstName, {"attr": {"class": "d-none"}}) }}
		{{ form_widget(form.cv, {"attr": {"class": "d-none"}}) }}
		{{ form_widget(form.address, {"attr": {"class": "d-none"}})}}
		{{ form_row(form.plainPassword) }}
		{{ form_row(form.submit, {"attr": {"class": "btn btn-warning mt-4"}}) }}
		{{ form_end(form) }}
	</div>
{% endblock %}
