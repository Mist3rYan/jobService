{% extends 'base.html.twig' %}

{% block title %}
	Candidat
{% endblock %}

{% block body %}
	{% if app.user %}
		<div class="container mt-4">
			{% if user|length > 0 %}
				<h1>Référence du candidat:
					{{ user.id }}</h1>
				{% for message in app.flashes('danger')%}
					<div class="alert alert-danger mt-4">
						{{ message }}
					</div>
				{% endfor %}
				{% for message in app.flashes('success')%}
					<div class="alert alert-success mt-4">
						{{ message }}
					</div>
				{% endfor %}
				<table class="table table-striped ">
					<tbody>
						<tr class="table-primary">
							<td class="text-left col-md-2">
								STATUT
							</td>
							{% if user.roles[0] == 'ROLE_RECRUTEUR' %}
								<td class="text-center">RECRUTEUR</td>
							{% else %}
								<td class="text-center">CANDIDAT</td>
							{% endif %}
						</tr>
						<tr class="table-primary">
							<td class="text-left col-md-2">
								EMAIL
							</td>
							<td class="text-left">{{ user.email }}</td>
						</tr>
						<tr class="table-primary">
							<td class="text-left">
								NOM
							</td>
							<td class="text-left">{{ user.name }}</td>
						</tr>
						<tr class="table-primary">
							<td class="text-left">
								PRENOM
							</td>
							<td class="text-left">{{ user.firstname }}</td>
						</tr>

						<tr class="table-primary">
							<td class="text-left">
								MON CV
							</td>
							<td class="text-left">
								<a href="{{ '/uploads/' ~ user.cv }}">Télécharger</a>
							</td>
						</tr>
						<tr class="table-primary">
							<td class="text-left">
								DATE DE CREATION
							</td>
							<td class="text-left">{{ user.createdAt|date('d/m/Y')}}</td>
						</tr>
					</tbody>
				</table>
			{% else %}
				<div class="alert alert-dismissible alert-danger">
					<strong>Aucune offre trouvée</strong>
				</div>
			{% endif %}
		</div>
		<div class="container text-center">
			<a href="{{path('admin.candidatListe')}}" class="btn btn-secondary">Retour</a>
			<a href="{{path('admin.candidatDelete',{'id': user.id})}}" class="btn btn-danger">Supprimer</a>
		</div>
	{% else  %}
		<div class="container">
			{% include 'security/login.html.twig' %}
		</div>
	{% endif %}
{% endblock %}
