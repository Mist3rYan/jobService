{% extends 'base.html.twig' %}

{% block title %}
	Panneau de controle
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="text-center">PANNEAU DE CONTROLE ADMINISTRATEUR</h1>
		{% for message in app.flashes('danger')%}
			<div class="alert alert-danger mt-4">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('success')%}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}
	</div>
	<div class="container">
		<div class="row mt-4">
			<div class="col">
				<a href="{{ path('admin.consultantListe')}}" class="btn btn-success btn-lg w-100">Consultants</a>
			</div>
		</div>
		<div class="row mt-4">
			<div class="col">
				<a href="{{ path('admin.createConsultant')}}" class="btn btn-success btn-lg w-100">Cr√©er un Consultant</a>
			</div>
		</div>
		<div class="row mt-4">
			<div class="col">
				<a href="{{ path('admin.recruteurListe')}}" class="btn btn-info btn-lg w-100">Recruteurs</a>
			</div>
		</div>
		<div class="row mt-4">
			<div class="col">
				<a href="{{ path('admin.listeAd')}}" class="btn btn-info btn-lg w-100">Annonces</a>
			</div>
		</div>
		<div class="row mt-4">
			<div class="col">
				<a href="{{ path('admin.candidatListe')}}" class="btn btn-secondary btn-lg w-100">Candidats</a>
			</div>
		</div>
	</div>

{% endblock %}
