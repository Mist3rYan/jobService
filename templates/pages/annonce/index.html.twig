{% extends 'base.html.twig' %}

{% block title %}
	Les offres
{% endblock %}

{% block body %}
	<div class="container mt-4">
		{% if annonces|length > 0 %}
			{% if app.user %}
				{% if app.user.roles[0] == 'ROLE_CONSULTANT' %}
					<h1>Les offres d'emploi à valider</h1>
				{% endif %}
			{% else %}

				<h1>Les offres d'emploi</h1>
			{% endif %}
			{% for message in app.flashes('danger')%}
				<div class="alert alert-danger mt-4">
					{{ message }}
				</div>
			{% endfor %}
			{% for message in app.flashes('success')%}
				<div class="alert alert-success mt-4">
					{{ message }}
				</div>
			{% endfor %}
			{# total items count #}
			<div class="alert alert-dismissible alert-primary mt-4">
				<strong>Nombre d'offres d'emploi à valider:
					{{ annonces.getTotalItemCount }}</strong>
			</div>
			<table class="table table-hover ">
				<thead>
					<tr>
						{# <th scope="col" class="text-center">Numéro</th> #}
						<th scope="col" class="text-center">Poste</th>
						<th scope="col" class="text-center">Lieu</th>
						<th scope="col" class="text-center">Description</th>
						<th scope="col" class="text-center">Date</th>
						{% if is_granted('ROLE_CANDIDAT') or is_granted('ROLE_CONSULTANT') %}
							<th scope="col" class="text-center">Détails</th>
						{% endif %}
					</tr>
				</thead>
				<tbody>
					{% for annonce in annonces %}
						<tr
							class="table-primary">
							{# <th scope="row" class="text-center">{{ loop.index }}</th> #}
							<td class="text-center">{{ annonce.poste }}</td>
							<td class="text-center">{{ annonce.lieudetravail }}</td>
							<td class="text-center">{{ annonce.description }}</td>
							<td class="text-center">{{ annonce.createAt|date('d/m/Y')}}</td>
							{% if is_granted('ROLE_CANDIDAT') or is_granted('ROLE_CONSULTANT') %}
								<td class="text-center">
									<a href="{{ path('annonce.detail', {'id': annonce.id}) }}" class="btn btn-success">Voir</a>
								</td>
							{% endif %}
						</tr>
					{% endfor %}
				</tbody>
			</table>
			{# display navigation #}
			<div class="navigation d-flex justify-content-center">
				{{ knp_pagination_render(annonces) }}
			</div>
		{% else %}
			<div class="alert alert-dismissible alert-danger">
				<strong>Aucune offre trouvée</strong>
			</div>
		{% endif %}
	</div>
{% endblock %}
